@model PROG7311_PART2_ST10091214.Models.Farmer

@{
	ViewData["Title"] = "Delete";
}

<body class="center" style="background-color:mediumseagreen; font-family:Consolas">
	<h1 style="font-weight:bold">Delete</h1>
	<br />
	<br />
	<h4 style="font-weight:bold;color:red">Are you sure you want to delete this farmer?</h4>
	<br />
	<br />
	<div>
		<h5 style="font-weight:bold">Farmer</h5>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Farmer ID:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Id)
			</dd>
			<dt class="col-sm-2">
				Name:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.name)
			</dd>
			<dt class="col-sm-2">
				Surname:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.surname)
			</dd>
			<dt class="col-sm-2">
				Contact Number:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.contact_number)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="submit" value="Delete" class="btn btn-danger" /> |
			<a href="javascript:history.back()">Back</a>
		</form>
	</div>
</body>