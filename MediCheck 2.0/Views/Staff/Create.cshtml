@model PROG7311_PART2_ST10091214.Models.Employee

@{
	ViewData["Title"] = "Create Employee";
}
<body style="background-color:mediumseagreen; font-family:Consolas; align-items: center;">
	<div class="text-center align-items-center">
		<h1>Add Employee</h1>
		<p>
			Introducing Create, the perfect platform to add a employee on Farmer Central.
			Easily input all the essential details, from name and personal details.
			Add to the farming community now!
		</p>
		<h4>Fill in all the fields</h4>
		<hr />
		<div class="col-md-4  d-inline-block">
			<form asp-action="Create" class="align-content-center">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="username" class="control-label">Username</label>
					<input asp-for="username" name="txtUsername" class="form-control" required />
					<span asp-validation-for="username" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="password" class="control-label">Password</label>
					<input asp-for="password" name="txtPassword" class="form-control" required />
					<span asp-validation-for="password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="emp_id" class="control-label">Employee ID</label>
					<input asp-for="emp_id" name="txtID" class="form-control" required />
					<span asp-validation-for="emp_id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="name" class="control-label">Name</label>
					<input asp-for="name" name="txtName" class="form-control" required />
					<span asp-validation-for="name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="surname" class="control-label">Surname</label>
					<input asp-for="surname" name="txtSurname" class="form-control" required />
					<span asp-validation-for="surname" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="phone" class="control-label">Phone</label>
					<input asp-for="phone" name="txtContactNumber" class="form-control" required />
					<span asp-validation-for="phone" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
		<div>
			<a style="color:black" href="javascript:history.back()">Back</a>
		</div>
		@section Scripts {
			@{
				await Html.RenderPartialAsync("_ValidationScriptsPartial");
			}
		}
	</div>
</body>