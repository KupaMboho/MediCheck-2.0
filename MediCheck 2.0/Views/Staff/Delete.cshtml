@model PROG7311_PART2_ST10091214.Models.Employee

@{
	ViewData["Title"] = "Delete Employee";
}
<body class="center" style="background-color:mediumseagreen; font-family:Consolas">
	<h1 style="font-weight:bold">Delete</h1>
	<br />
	<br />
	<h4 style="font-weight:bold;color:red">Are you sure you want to delete this employee?</h4>
	<br />
	<br />
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Username :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.username)
		</dd>
		<dt class="col-sm-2">
			Password :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.password)
		</dd>
		<dt class="col-sm-2">
			Employee ID :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.emp_id)
		</dd>
		<dt class="col-sm-2">
			Name :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.name)
		</dd>
		<dt class="col-sm-2">
			Surname :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.surname)
		</dd>
		<dt class="col-sm-2">
			Phone :
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.phone)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a style="color:black" href="javascript:history.back()">Back</a>
	</form>
</body>