@model PROG7311_PART2_ST10091214.Models.Employee

@{
	ViewData["Title"] = "Index";
}
<body class="text-center align-items-center" style="background-color:mediumseagreen; font-family:Consolas">
	<div>
		<h4>Employee Details</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Username:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.username)
			</dd>
			<dt class="col-sm-2">
				Password:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.password)
			</dd>
			<dt class="col-sm-2">
				Employee ID:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.emp_id)
			</dd>
			<dt class="col-sm-2">
				Name:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.name)
			</dd>
			<dt class="col-sm-2">
				Surname:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.surname)
			</dd>
			<dt class="col-sm-2">
				Contact Number:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.phone)
			</dd>
		</dl>
	</div>
	<div>
		@Html.ActionLink("Edit", "Edit", new { id = Model.emp_id}) |
		<a style="color:black" href="javascript:history.back()">Back</a>
	</div>
</body>