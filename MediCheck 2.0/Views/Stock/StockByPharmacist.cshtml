@model IEnumerable<PROG7311_PART2_ST10091214.Models.Products>

@{
	ViewData["Title"] = "ProductByFarmer";
}
<body style="background-color:mediumseagreen; font-family:Consolas">
	<h1>Products you are selling</h1>
	<hr />
	<p>
		<a asp-action="Create">Add a product</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					Product ID
				</th>
				<th>
					Farmer ID
				</th>
				<th>
					Product Name
				</th>
				<th>
					Date Added
				</th>
				<th>
					Product Type
				</th>
				<th>
					Quantity
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.productID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.farmerID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.productName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.date_added)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.productType)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.quantity)
					</td>
					<td style="-webkit-text-stroke-color:black">
						|	@Html.ActionLink("Edit", "Edit", new { id=item.productID }) |
						@Html.ActionLink("Delete", "Delete", new { id=item.productID  }) |
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		<a style="color:black" href="javascript:history.back()">Back</a>
	</div>
</body>