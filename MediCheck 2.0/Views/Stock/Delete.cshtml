@model PROG7311_PART2_ST10091214.Models.Products

@{
	ViewData["Title"] = "Delete";
}

<body class="center" style="background-color:mediumseagreen; font-family:Consolas">
	<h1 style="font-weight:bold">Delete</h1>
	<h4 style="font-weight:bold;color:red">Are you sure you want to delete this product?</h4>
	<div>
		<h4>Product:</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Product ID :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productID)
			</dd>
			<dt class="col-sm-2">
				Farmer ID :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.farmerID)
			</dd>
			<dt class="col-sm-2">
				Product Name :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productName)
			</dd>
			<dt class="col-sm-2">
				Date Added :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.date_added)
			</dd>
			<dt class="col-sm-2">
				Product Type :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productType)
			</dd>
			<dt class="col-sm-2">
				Quantity :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.quantity)
			</dd>
		</dl>
		<form asp-action="Delete" asp-route-farmerId="@Model.farmerID">
			<input type="submit" value="Delete" class="btn btn-danger" /> |
			<a style="color:black" href="javascript:history.back()">Back</a>
		</form>
	</div>
</body>
