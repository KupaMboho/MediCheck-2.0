@model PROG7311_PART2_ST10091214.Models.Products

@{
	ViewData["Title"] = "Details";
}

<body style="background-color:seagreen; font-family:Consolas;">
	<div class="text-center align-items-center">
		<h1>Product details</h1>
		<hr />
		<dl class="row;">
			<dt class="col-sm-2">
				Product ID :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productID)
			</dd>
			<dt class="col-sm-2">
				Farmer ID :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.farmerID)
			</dd>
			<dt class="col-sm-2">
				Product Name :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productName)
			</dd>
			<dt class="col-sm-2">
				Date Added :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.date_added)
			</dd>
			<dt class="col-sm-2">
				Product Type :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.productType)
			</dd>
			<dt class="col-sm-2">
				Quantity :
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.quantity)
			</dd>
		</dl>
	</div>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</body>